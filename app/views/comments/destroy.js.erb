<% if @comment.destroyed? %>
  $('#comment-' +<%= @comment.id %>).slideUp("fast");
  $('.js-comments-count').html("<%= @comment.user.comments.count %> comments");
<% else %>
  $('#comment-' +<%= @comment.id %>).prepend("<div class='alert alert-error'><%= "There was an error deleting the comment." %></div>");
<% end %>
