<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: { post: @post } %>
    <h1>
      <%= image_tag(@post.image.thumb.url) if @post.image? %>
      <%= markdown @post.title %>
    </h1>
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete", topic_post_path, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
    <div>
      <h3><%= pluralize(@post.points, 'point')%></h3>
      <small>
        <%= pluralize(@post.up_votes, 'vote') %>,
        <%= pluralize(@post.down_votes, 'vote') %>
      </small>
    </div>
    <%= render partial: 'favorites/favorite', locals: { post: @post } %>
  </div>
</div>
<br/>
<div class="row">
  <h2>Comments</h2>
 <div class="col-md-12">
    <div class="js-comments">
      <%= render @post.comments %>
    </div>
    <% if policy(Comment.new).create?  %>
      <div class="new-comment">
        <%= render partial: 'comments/form', locals: { post: @post, comment: @post.comments.new }  %>
      </div>
    <% end %>
  </div>
</div>
